@model IEnumerable<Tool_Menagement.Models.Rejestracja>
@{
    ViewData["Title"] = "Index";
}

<h1>Lista Rejestracji</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id Pozycji</th>
            <th>Id Zlecenia</th>
            <th>Sztuk</th>
            <th>Data Wykonania</th>
            <th>Wykonał</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdPozycji</td>
                <td>@item.IdZlecenia</td>
                <td>@item.Sztuk</td>
                <td>@item.DataWykonania?.ToString("yyyy-MM-dd")</td>
                <td>@item.Wykonal</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-primary">Dodaj nową rejestrację</a>
</div>
