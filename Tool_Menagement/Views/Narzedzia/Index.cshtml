@model IEnumerable<Tool_Menagement.Models.Narzedzie>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Narzędzi</h1>

<table class="table">
    <thead>
        <tr>
            <th>Pozycja magazynowa</th>
            <th>Id Narzędzia</th>
            <th>Nazwa</th>
            <th>Średnica</th>
            <th>Trwałość</th>
            <th>Użycie</th>
            <th>Cykl </th>
            <th>Wycofany</th>
            <th>Regeneracja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            foreach (var magazyn in item.Magazyns)
            {
                <tr>
                    <td>@magazyn.PozycjaMagazynowa</td>
                    <td>@item.IdNarzedzia</td>
                    <td>@item.Nazwa</td>
                    <td>@item.Srednica</td>
                    <td>@magazyn.Trwalosc</td>
                    <td>@magazyn.Uzycie</td>
                    <td>@magazyn.CyklRegeneracji</td>
                    <td>@magazyn.Wycofany</td>
                    <td>@magazyn.Regeneracja</td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowe </a>
</div>
